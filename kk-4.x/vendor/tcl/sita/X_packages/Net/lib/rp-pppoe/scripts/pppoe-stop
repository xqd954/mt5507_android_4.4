#!/bin/busybox sh
# ../scripts/pppoe-stop.  Generated from pppoe-stop.in by configure.
#***********************************************************************
#
# pppoe-stop
#
# Shell script to bring down a PPPoE connection
#
# Copyright (C) 2000 Roaring Penguin Software Inc.
#
# $Id$
#
# This file may be distributed under the terms of the GNU General
# Public License.
#
# LIC: GPL
#
# Usage: pppoe-stop [config_file]
# If config_file is omitted, defaults to /etc/ppp/pppoe.conf
#
#***********************************************************************

# Set to "C" locale so we can parse messages from commands
LANG=C
export LANG

ME="`busybox basename $0`"
LOGGER="busybox logger -t $ME"
CONFIG="$1"
if busybox test "$CONFIG" = ""  ; then
    CONFIG=/data/misc/ppp/pppoe.conf
fi

if busybox test ! -f "$CONFIG" -o ! -r "$CONFIG"  ; then
    echo "$ME: Cannot read configuration file '$CONFIG'" >& 2
    exit 1
fi
export CONFIG
. $CONFIG

PPPOE_PIDFILE="$PIDFILE.pppoe"
PPPD_PIDFILE="$PIDFILE.pppd"
STARTPID="$PIDFILE.start"

# Backward config file compatibility
if busybox test "$DEMAND" = "" ; then
	DEMAND=no
fi

# Ignore SIGTERM
trap "" 15

# Check for pidfile
if busybox test -r "$PIDFILE"  ; then
    PID=`cat $PIDFILE`

    # Check if still running
    busybox kill -0 $PID > /dev/null 2>&1
    if busybox test $? != 0  ; then
	echo "$ME: The pppoe-connect script (PID $PID) appears to have died" >& 2
    fi

    # Kill pppd, which should in turn kill pppoe
    if busybox test -r "$PPPD_PIDFILE"  ; then
	PPPD_PID=`cat "$PPPD_PIDFILE"`
	$LOGGER -p daemon.notice "Killing pppd"
	echo "Killing pppd ($PPPD_PID)"
	busybox kill $PPPD_PID > /dev/null 2>&1
    fi

    # Kill pppoe-start
    PIDS=`cat $STARTPID`
    busybox kill -0 $PIDS > /dev/null 2>&1
    if busybox test $? = 0  ; then
	$LOGGER -p daemon.notice "Killing pppoe-connect"
	busybox kill $PIDS > /dev/null 2>&1
    fi

    # Kill pppoe-connect
    $LOGGER -p daemon.notice "Killing pppoe-connect"
    echo "Killing pppoe-connect ($PID)"
    busybox kill -9 $PID > /dev/null 2>&1

    # Kill pppd again, in case it's still hanging around
    if busybox test -r "$PPPD_PIDFILE"  ; then
	PPPD_PID=`cat "$PPPD_PIDFILE"`
	busybox kill -9 $PPPD_PID > /dev/null 2>&1
    fi

    busybox rm -f "$PIDFILE" "$PPPD_PIDFILE" "$PPPOE_PIDFILE" "$STARTPID"
else
    echo "$ME: No PPPoE connection appears to be running" >&2
    exit 1
fi

exit 0
